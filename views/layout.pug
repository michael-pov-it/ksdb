    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="https://bootswatch.com/4/lux/bootstrap.min.css")
    link(rel="stylesheet", href="/src/css/main.css")
    title ksdb-dev #{title}
  body
    div.top-bar.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      h5.my-0.mr-md-auto.font-weight-normal
        a(href="/")= routename
      nav.my-2.my-md-0.mr-md-3
        a.p-2(href="/") Home
        block links
        if UserStatus == true
          //- a.p-2#delete_link(href="/logout") Delete Account
          a.p-2.text-dark#logout_link #{email}

    .container
      block content
    footer.
    block scripts
      